<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400&family=Roboto&display=swap" rel="stylesheet">
    <link href="/assets/main-style.css" rel="stylesheet" type="text/css">
    <link href="/assets/match-profile.css" rel="stylesheet" type="text/css">
    <script src="assets/carousel.js"></script>
    <title>Linkt</title>
</head>
<body>
    <!-- header -->
    <div class="header-container">
        <header class="main-header">
            <a href="/dashboard"><img class="back-button" src="assets/icons/left-arrow.png" alt="back-button"></a>
            <div class="header-element">
                <p class="header-text">Dating Profile</p>
            </div>
            <div class="header-element">
                <img class="header-logo" src="/assets/icons/logo.png" alt="linkt-logo">
            </div>
        </header>
    </div>

     <!-- main -->
    <% const { user_id, username, first_name, last_name, age, profile_picture, headline, bio, current_latitude, current_longitude, city_of_residence, distance_kms, likes_user, job_title, highest_education_type } = matchProfile %>
     <div class="main-container">
        <main>
            <div class="profile-container">
                    <!-- <img class="profile-photo" src="<%=profile_picture%>" alt="profile-picture"> -->

                    <div id="profile-picture-carousel" class="carousel slide profile-image-container" data-ride="carousel" data-interval="false">
                        <ol class="carousel-indicators">
                            <%if(matchCarouselPhotos && matchCarouselPhotos[1] && matchCarouselPhotos[1].photo_link){%>
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <%}%>
                            <%if(matchCarouselPhotos && matchCarouselPhotos[2] && matchCarouselPhotos[2].photo_link){%>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            <%}%>  
                        </ol>
                        <div class="carousel-inner">
                          <div class="carousel-item active profile-photo-container">
                            <img class="d-block w-100 profile-photo" src="<%=profile_picture%>" alt="First slide">
                          </div>
                          <div class="carousel-item">
                              <%if(matchCarouselPhotos && matchCarouselPhotos[1] && matchCarouselPhotos[1].photo_link){%>
                            <img class="d-block w-100 profile-photo" src="<%=matchCarouselPhotos[1].photo_link%>" alt="Second slide">
                            <%}%>
                        </div>
                          <div class="carousel-item">
                            <%if(matchCarouselPhotos && matchCarouselPhotos[2] && matchCarouselPhotos[2].photo_link){%>
                            <img class="d-block w-100 profile-photo" src="<%=matchCarouselPhotos[2].photo_link%>" alt="Third slide">
                            <%}%>  
                        </div>
                        </div>
                        <%if(matchCarouselPhotos && matchCarouselPhotos[1] && matchCarouselPhotos[1].photo_link){%>
                        <a class="carousel-control-prev" href="#profile-picture-carousel" role="button" data-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#profile-picture-carousel" role="button" data-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                        </a>
                        <%}%>
                      </div>


                <div class="profile-info-container">
                    <p class="name"><%=`${first_name} ${last_name}, ${age}`%></p>
                    <p class="distance">Distance: <%=distance_kms%> KMs</p>
                    <p class="headline"><%=headline%></p>
                    <p class="bio"><%=bio%></p>
                    <div class="profile-ribbon-container">
                        <%if(city_of_residence){%>
                        <div class="profile-ribbon"><img class="profile-icon" src="assets/icons/pin.png" alt="location"><p class="ribbon-content"></p><%=`${city_of_residence}`%></div>
                        <%} else {%>
                        <div class="profile-ribbon"><img class="profile-icon" src="assets/icons/pin.png" alt="location"><p class="ribbon-content"></p>Latitude: <%=`${current_latitude}`%> Longitude: <%=`${current_longitude}`%></div>
                        <%}%>
                        <!-- <div class="profile-ribbon"><img class="profile-icon" src="assets/icons/home-run.png" alt="place-of-origin"><p class="ribbon-content">From: </p></div> -->
                        <div class="profile-ribbon"><img class="profile-icon" src="assets/icons/work.png" alt="career"><p class="ribbon-content"></p><%=job_title%></div>
                        <div class="profile-ribbon"><img class="profile-icon" src="assets/icons/student.png" alt="education"><p class="ribbon-content"></p><%=highest_education_type%></div>
                        <!-- <div class="profile-ribbon"><img class="profile-icon" src="" alt="education"><p class="ribbon-content"></p></div> -->
                    </div>
                </div>

                <div class="buttons">
                    <form class="like-button-container" action="/match-liked" method="POST">
                        <input class="profile-selected" name="user_id" type="hidden" value="<%=user_id%>">
                        <input class="profile-selected" name="username" type="hidden" value="<%=username%>">
                        <input class="profile-selected" name="first_name" type="hidden" value="<%=first_name%>">
                        <input class="profile-selected" name="last_name" type="hidden" value="<%=last_name%>">
                        <input class="profile-selected" name="age" type="hidden" value="<%=age%>">
                        <input class="profile-selected" name="profile_picture" type="hidden" value="<%=profile_picture%>">
                        <input class="profile-selected" name="current_latitude" type="hidden" value="<%=current_latitude%>">
                        <input class="profile-selected" name="current_longitude" type="hidden" value="<%=current_longitude%>">
                        <input class="profile-selected" name="headline" type="hidden" value="<%=headline%>">
                        <input class="profile-selected" name="bio" type="hidden" value="<%=bio%>">
                        <input class="profile-selected" name="job_title" type="hidden" value="<%=job_title%>">
                        <input class="profile-selected" name="highest_education_type" type="hidden" value="<%=highest_education_type%>">
                        <input class="profile-selected" name="distance_kms" type="hidden" value="<%=distance_kms%>">
                        <input class="profile-selected" name="likes_user" type="hidden" value="<%=likes_user%>">
                        <button class="like">Like!</button>
                    </form>
                    <form class="message-button-container" action="/match-message" method="POST">
                        <input class="message-selected" name="receiver_user_id" type="hidden" value="<%=user_id%>">
                        <input class="message-selected" name="receiver_username" type="hidden" value="<%=username%>">
                        <input class="message-selected" name="profile_picture" type="hidden" value="<%=profile_picture%>">
                        <input class="message-selected" name="likes_user" type="hidden" value="<%=likes_user%>">
                        <button class="message">Message!</button>
                    </form>
                </div>
            </div>
        </main>
    </div>

    <div class="footer-container">
        <footer class="main-footer">
            <nav class="footer-navigation-icons">
                <a class="footer-link" href="/user-profile"><img src="assets/icons/profileIcon.png" alt="profile-icon"></a>
                <a class="footer-link" href="/user-messages"><img src="assets/icons/messageIcon.png" alt="message-icon"></a>
                <a class="footer-link" href="/user-settings-page"><img src="assets/icons/settingIcon.png" alt="settings-icon"></a>
            </nav>
        </footer>
    </div>
</body>
</html>