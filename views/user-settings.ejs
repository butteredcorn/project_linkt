<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Linkt</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="assets/user-settings.css">
</head>
<body>
    <div id="AppMain">
        <div id="App">
            <div class="TitleDiv">
                <h1 class="Title">Looks like you're new!</h1>

                <h3 class="SubText">Let's get your profile setup so we can get you Linkt up.</h3>
            </div>

            <div class="QuestionBox">
                <div class="QuestionTextBox">
                    <p id="QuestionTitle">I identify as a</p>
                </div>
                <div class="QuestionTextBox">
                    <p class="QuestionText">Woman</p>
                    <div class="Dot"></div>
                </div>
                <div class="QuestionTextBox">
                    <p class="QuestionText">Man</p>
                    <div class="Dot"></div>
                </div>
                <div class="QuestionTextBox">
                    <p class="QuestionText">Other</p>
                    <div class="Dot"></div>
                </div>
            </div>

            <div class="QuestionBox">
                <div class="QuestionTextBox">
                    <p id="QuestionTitle">Show me</p>
                </div>
                <div class="QuestionTextBox">
                    <p class="QuestionText">Woman</p>
                    <div class="Dot"></div>
                </div>
                <div class="QuestionTextBox">
                    <p class="QuestionText">Man</p>
                    <div class="Dot"></div>
                </div>
                <!-- <div class="QuestionTextBox">
                    <p class="QuestionText">Other</p>
                    <div class="Dot"></div>
                </div> -->
            </div>

            <div class="QuestionBox">  
                    <div class="title_box">
                        <p class="title1">Maximum Distance</p>
                        <p class="bubble">
                            <span id="result">0</span><br />
                            <span id="units">km</span>
                        </p>
                    </div>
                    <input type="range" id="slider" name="slider" min="0" max="150" step="1" onChange={showValue} />           
            </div>

            <div class="QuestionBox">  
                <div class="title_box">
                    <p class="title1">Age Range</p>
                    <p class="bubble">
                        <span id="result">18 </span><br />
                        <span id="units">- 99</span>
                    </p>
                </div>
                <input type="range" id="slider" name="slider" min="0" max="150" step="1" onChange={showValue} />           
            </div>

            <div class="button_container">
                <div class="button_container_inner">Next</div>
            </div>

        </div>
    </div>
</body>
<script>
    function showValue() {
    var input = document.getElementById("slider");
    var output = document.getElementById("result");
    output.innerHTML = input.value;

    input.oninput = function () {
        output.innerHTML = this.value;


        // Show + after value when value = 10
        if (this.value == 10) {
            output.innerHTML = this.value + "+";
        }
    }
}
</script>
</html>